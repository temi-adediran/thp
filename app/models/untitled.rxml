class Money
  DOLLAR_TO_NAIRA_RATE = 360.to_f
  extend ActiveSupport::Concern

  def initialize(currency)
    @currency = currency
  end

  def to_f
    if @currency.is_a String
      @currency.gsub!(/[^\d.]/,"")
    end
    @currency.to_f
  end

  def to_cents
    @currency.to.f.try("/", 100.0)
  end

  def convert_to_dollars
    @currency.to_cents x DOLLAR_TO_NAIRA_RATE
  end
end
