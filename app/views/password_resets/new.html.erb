<div class="forgot-panel">
  <div class="forgot-body">
  </div>
  <div class="forgot-sidebar">
    <div class="forgot-sidebar-body">
      <%= render partial: "home/haven_logo" %>

      <h4 class="forgot-title mg-t-20 mg-b-30">Forgot Password</h4>
      <h5 class="forgot-subtitle mg-b-10">Enter your email address and we will send you a link to reset your password.</h5>

      <div class="forgot-form mg-t-20">
        <%= form_tag password_resets_path, :method => :post do %>
          <% if flash.any? %>
            <%= render partial: "layouts/flash" %>
          <% end %>

          <div class="form-group">
            <%= label_tag :email, "Email address" %>
            <%= email_field_tag :email, params[:email], class: "form-control" %>
          </div>
          <div class="form-group">
            <%= button_tag "Send Code Verification", class: "btn btn-block btn-brand-01 btn-uppercase" %>
          </div>
          <div class="form-group">
            <%= link_to "Back to Login", login_path, class: "btn btn-block btn-white btn-uppercase" %>
          </div>
        <% end %>
      </div>
    </div>
  </div><!-- forgot-sidebar -->
</div><!-- forgot-panel -->
