<div class="ld-header">
  <div class="container pd-sm-x-0 pd-md-x-15">
    <div>
      <h6 class="ld-logo">The Haven Portal</h6>
    </div>

    <nav class="">
      <% if current_user %>
        <p>Logged in as <%= current_user.email %></p>
        <%= link_to "Change password", edit_user_path(current_user) %>
        <%= link_to "Log Out", logout_path %>
      <% else %>
        <%= link_to "Log In", login_path, class: "btn btn-outline-warning btn-r-3" %>
        <%= link_to "Sign Up", signup_path, class: "btn btn-warning btn-r-3" %>
      <% end %>
    </nav>
  </div><!-- container -->
</div><!-- ld-header -->

<div id="sectionHome" class="slide-wrapper">
  <div class="container pd-sm-x-0 pd-md-x-15">
    <div class="mx-wd-sm-45p mx-wd-lg-40p">
      <h1 class="tx-24 tx-sm-22 tx-md-28 tx-white-8 tx-numeric tx-light lh-4 mg-b-30 mg-md-b-40">The Haven ministry is borne out of the strategy of the Holy Spirit, the Lord of the harvest, to raise a group of people to a position of strength, economic power and spiritual wisdom.
      <br>
      <%= link_to "Get Involved", signup_path, class: "btn btn-uppercase btn-r-3 btn-white bd-0 tx-numeric flex-1 mg-l-10 mg-sm-l-0 mg-sm-t-5 mg-md-t-0" %>
    </div>
    <div class="slide-img-group">
      <div class="slide-img-item">
        <img src=<%= asset_path("Home-picture.jpg") %> class="img-fluid" alt="">
      </div>
    </div>
  </div><!-- container -->
</div><!-- slide-wrapper -->

<div id="sectionSkin" class="pd-t-40 pd-lg-t-60 pd-b-45 pd-lg-b-65 bg-gray-200">
  <div class="container pd-xl-x-0">
    <h1 class="ld-title">Who We Are</h1>
    <div class="row row-sm">
      <div class="col-6 col-md-3">
        <a href=<%= asset_path("Pastor.jpg") %> class="card card-hover bd-0 pd-5">
          <img src=<%= asset_path("Pastor.jpg") %> class="img-fluid" alt="">
        </a>
      </div><!-- col -->
      <div class="col-6 col-md-3">
        <a href=<%= asset_path("haven-members-2.jpg") %> class="card card-hover bd-0 pd-5">
          <img src=<%= asset_path("haven-members-2.jpg") %> class="img-fluid" alt="">
        </a>
      </div><!-- col -->
      <div class="col-6 col-md-3 mg-t-20 mg-md-t-0">
        <a href=<%= asset_path("haven-members-3.jpg") %> class="card card-hover bd-0 pd-5">
          <img src=<%= asset_path("haven-members-3.jpg") %> class="img-fluid" alt="">
        </a>
      </div><!-- col -->
      <div class="col-6 col-md-3 mg-t-20 mg-md-t-0">
        <a href=<%= asset_path("haven-members-4.jpg") %> class="card card-hover bd-0 pd-5">
          <img src=<%= asset_path("haven-members-4.jpg") %> class="img-fluid" alt="">
        </a>
      </div><!-- col -->
    </div><!-- row -->
  </div><!-- container -->
</div>


