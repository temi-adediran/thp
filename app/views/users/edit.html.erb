<% if flash.any? %>
  <%= render partial: "layouts/flash" %>
<% end %>
<%= render partial: "dashboard/sidebar" %>

<div class="content content-page">
  <%= render partial: "dashboard/navbar" %>

  <div class="col-md-8 mg-t-20">
    <div class="card card-body pd-sm-40 pd-md-30 pd-xl-y-35 pd-xl-x-40">
      <div class="tab-content">
        <h6 class="tx-uppercase tx-semibold tx-color-01 mg-b-0">Change Password</h6>
        <br>
        <div class="form-settings">
          <%= form_for(@password_form, url: change_password_path, method: :post) do |f| %>
            <% if @password_form.errors.any? %>
              <div class="error-messages">
                <ul>
                  <% @password_form.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.password_field :original_password, class: "form-control", placeholder: "Enter your current password" %>
              <%= f.password_field :new_password, class: "form-control mg-t-5", placeholder: "New password" %>
              <%= f.password_field :new_password_confirmation, class: "form-control mg-t-5", placeholder: "Confirm new password" %>
            </div>
            <div class="form-group">
              <%= f.button t("views.users.edit.button"), class: "btn btn-brand-02" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
